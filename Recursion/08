package com.codestates.coplit; 
import java.util.*;

public class Solution { 
	public int[] drop(int num, int[] arr){

    	// num이 arr 배열의 크기 이상이면 빈 배열 반환
    	if (num >= arr.length) { return new int[]{};}
    	// num이 0이면 arr 배열 반환
    	if (num == 0) { return arr; }

    	// num을 1씩 차감하고, arr의 가장 좌측 요소를 제거하는 과정을 재귀적으로 반복
    	return drop(num-1, Arrays.copyOfRange(arr, 1, arr.length)); 
	
	} 
}
