package com.codestates.coplit; 
import java.util.*;

public class Solution { 
	public int[] reverseArr(int[] arr){

      	// arr가 빈 배열이면 빈 배열 그대로 반환
      	if(arr.length == 0) { return arr; }

      	// head : arr 마지막 원소로 구성
      	// tail : 그 이외의 원소로 구성하되 재귀적으로 수행
      	// dest : 항상 배열의 크기가 arr.length임
      	int[] head = Arrays.copyOfRange(arr, arr.length - 1, arr.length);
      	int[] tail = reverseArr(Arrays.copyOfRange(arr, 0, arr.length - 1));
      	int[] dest = new int[head.length + tail.length];
      
      	// dest 배열에 head 배열의 0번 인덱스부터 삽입하되, dest 배열의 인덱스 0부터 head.length 인덱스까지 삽입 (1개) 
      	// dest 배열에 tail 배열의 0번 인덱스부터 삽입하되, desc 배열의 인덱스 head.length부터 tail.length까지 삽입
      	System.arraycopy(head, 0, dest, 0, head.length);
      	System.arraycopy(tail, 0, dest, head.length, tail.length);

      	return dest;

	} 
}
