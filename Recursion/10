package com.codestates.coplit; 
import java.util.*;

public class Solution {  
	public boolean and(boolean[] arr){
    if (arr.length == 0) { return true; }

    if (Boolean.TRUE.equals(arr[0])) { 
      return and(Arrays.copyOfRange(arr, 1, arr.length)); 
      } 
    else { return false; }
    
	} 
}
