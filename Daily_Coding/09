package com.codestates.coplit; 
import java.util.*;

public class Solution { 
	public boolean ABCheck(String str) {
		String[] words = str.split(" ");
		String check01 = "a...b";
		String check02 = "b...a";
		
		for (String word : words) {
			if ((Pattern.matches(check01, word)) || (Pattern.matches(check02, word))) {
				return true;
				}
			}
			return false;
			}
}
